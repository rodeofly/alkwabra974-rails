<p id="notice"><%= notice %></p>

<h1>Liste des jeux</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Screenshot</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.description %></td>
        <td><%= game.screenshot %></td>
        <td><%= link_to 'Jouer', game %></td>
      </tr>
    <% end %>
  </tbody>
</table>
